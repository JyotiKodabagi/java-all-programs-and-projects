import java.util.Scanner;

public class ultimateAreaCalculator {
public static void main(String[] args) {
	Scanner sc = new Scanner(System.in);
	String op = sc.next();
//	if (op=="Rectangle") {
//		
//		
//	}
//	if (op=="Circle") {
//
//		System.out.println("area of Ractangle: "+AreaCalculator.areaCir(r));
//		
//	}
	switch (op) {
	case "Rectangle": 
		double a = sc.nextDouble();
		double b= sc.nextDouble();
		System.out.println("area of Ractangle: "+AreaCalculator.areaRec(a,b));
	break;
	case "circle": 
		double r = sc.nextDouble();
		System.out.println("area of circle: "+AreaCalculator.areaRec(a,b));
	break;
		
		
	}
	
}

class AreaCalculator{
	public static double areaCir(double r) {
		double area = 3.14*r*r;
		return area;
	}
	public static double areaRec(double a,double b) {
		double area = a*b;
		return area;
	}
}}